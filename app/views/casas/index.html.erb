<%= flash_message %>

<h1>Casas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @casas.each do |casa| %>
      <tr>
        <td><%= casa.nome %></td>
        <td><%= link_to 'Show', casa %></td>
        <td><%= link_to 'Edit', edit_casa_path(casa) %></td>
        <td><%= link_to 'Destroy', casa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Casa', new_casa_path %>
