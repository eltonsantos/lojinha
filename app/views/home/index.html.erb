<p id="notice"><%= notice %></p>

<h1>Carros</h1>
<% if @carros.present? %>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @carros.each do |carro| %>
        <tr>
          <td><%= carro.nome %></td>
          <td><%= link_to 'Show', carro %></td>
          <td><%= link_to 'Edit', edit_carro_path(carro) %></td>
          <td><%= link_to 'Destroy', carro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4>Não há carros cadastrados</h4>  
<% end %>
